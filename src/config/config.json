{
  "site": {
    "title": "Nextplate",
    "base_url": "https://nextplate.netlify.app",
    "base_path": "/",
    "trailing_slash": false,
    "favicon": "/images/favicon.png",
    "logo": "/images/logo.png",
    "logo_darkmode": "/images/logo-darkmode.png",
    "logo_width": "150",
    "logo_height": "27",
    "logo_text": "Nextplate"
  },

  "settings": {
    "search": true,
    "sticky_header": true,
    "theme_switcher": true,
    "default_theme": "dark",
    "pagination": 2,
    "summary_length": 200,
    "blog_folder": "blog"
  },

  "internationalization": {
    "defaultLocale": "en",
    "locales": ["en", "fr"],
    "localeDetails": [
      {
        "name": "English",
        "flag": "/images/uk.svg",
        "value": "en"
      },
      {
        "name": "French",
        "flag": "/images/fr.svg",
        "value": "fr"
      }
    ],
    "enablePageLocaleFallback": true
  },

  "params": {
    "contact_form_action": "#",
    "copyright": "Designed And Developed by [Zeon Studio](https://zeon.studio)"
  },

  "navigation_button": {
    "enable": true,
    "label": "Get Started",
    "link": "https://github.com/zeon-studio/nextplate"
  },

  "google_tag_manager": {
    "enable": false,
    "gtm_id": "GTM-XXXXXX"
  },

  "disqus": {
    "enable": true,
    "shortname": "themefisher-template",
    "settings": {}
  },

  "metadata": {
    "meta_author": "Themefisher",
    "meta_image": "/images/og-image.png",
    "meta_description": "Next Boilerplate"
  }
}
